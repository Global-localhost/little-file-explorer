<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:theme="@style/app_theme"
  android:background="@color/background">

  <EditText
    android:id="@+id/new_directory_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:hint="Enter folder name"
    android:text="New folder"
    tools:ignore="HardcodedText"/>

  <Button
    android:id="@+id/new_directory_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/new_directory_name"
    android:layout_toLeftOf="@id/new_directory_create"
    android:text="Cancel"
    tools:ignore="HardcodedText,RtlHardcoded"
    style="@style/buttonStyle" />

  <Button
    android:id="@+id/new_directory_create"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/new_directory_name"
    android:layout_alignParentRight="true"
    android:text="Create"
    tools:ignore="HardcodedText,RtlHardcoded"
    style="@style/buttonStyle" />

</RelativeLayout>